{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKER",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn app.main:app --workers 4 --worker-class uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT --timeout 120 --max-requests 1000 --max-requests-jitter 100 --access-logfile - --error-logfile -",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on_failure"
  }
}